<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi chuột di qua (hover) -->
    <item android:state_hovered="true">
        <shape>
            <solid android:color="#FF6200EE" /> <!-- Màu khi hover -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Trạng thái khi nhấn -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF3700B3" /> <!-- Màu khi nhấn -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Trạng thái mặc định -->
    <item>
        <shape>
            <solid android:color="#FF6200EE" /> <!-- Màu mặc định -->
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>