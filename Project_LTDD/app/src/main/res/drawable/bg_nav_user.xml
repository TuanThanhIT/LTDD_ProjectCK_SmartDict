<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bóng đổ -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/> <!-- Bo góc -->
            <solid android:color="@color/header_color"/> <!-- Màu nền -->
            <shadowColor android:color="#80000000" android:radius="12dp"/>
        </shape>
    </item>

    <!-- Nền chính -->
    <item android:top="4dp"> <!-- Dịch xuống để tạo hiệu ứng shadow -->
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="@color/main_color"/>
        </shape>
    </item>
</layer-list>
